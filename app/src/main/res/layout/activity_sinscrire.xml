<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerVertical="false"
    android:layout_gravity="bottom|center"
    android:background="#65827717"
    android:baselineAligned="false"
    android:gravity="bottom"
    tools:context=".S_inscrire">

    <LinearLayout
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ETNomPrenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Entrez vos nom et prénom"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/ETEmaildeconnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Entrez votre email de connexion"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/ETTelephone"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Entrez votre téléphone"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/Datededepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Date de départ prévue"
            android:inputType="date"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/MembresFamille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nombre de membres de la famille"
            android:inputType="number"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/ETMotdepasse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/ETMotdepasse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Répétez le mot de passe"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/BTValidationInscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monter à bord" />
    </LinearLayout>

</LinearLayout>